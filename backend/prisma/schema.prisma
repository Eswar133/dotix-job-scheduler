generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



enum JobStatus {
  pending
  running
  completed
}

enum JobPriority {
  low
  medium
  high
}

model Job {
  id         Int         @id @default(autoincrement())
  taskName   String
  payload    Json
  priority   JobPriority
  status     JobStatus   @default(pending)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([status])
  @@index([priority])
  @@index([createdAt])
}
